<?xml version="1.0"?>
<launch>

  <arg name="namespace" default="robot" />
  
  <!-- slam_gmapping node, subscribe to scan topic -->
  <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping" args="scan:=scan">
    <param name="base_frame" value="$(arg namespace)/base_link" />
    <param name="map_frame" value="$(arg namespace)/map" />
    <param name="odom_frame" value="$(arg namespace)/odom" />
    <param name="map_update_interval" value="3" /> <!-- in seconds, lower the value, higher the computational load -->
    <param name="linearUpdate" value="0.5" /> <!-- process a scan each time the robot translates this far -->
    <param name="angularUpdate" value="0.3" /> <!-- process a scan each time the robot rotates this far -->
    <param name="xmin" value="-5" />
    <param name="ymin" value="-5" />
    <param name="xmax" value="5" />
    <param name="ymax" value="5" />
    <param name="delta" value="0.05" /> <!-- map resolution -->
    <param name="transform_publish_period" value="0.05" />
    <param name="occ_thresh" value="0.25" />

    <!-- set maxUrange < max range of sensor <= max range -->
    <param name="maxUrange" value="2.5" />
    <param name="maxRange" value="3.5" /> 

  </node>

</launch>